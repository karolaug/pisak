[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": [
                        "main_box", "background_box"
                    ]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundImage",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.01,
        "ratio-margin-bottom": 0.01,
        "ratio-margin-left": 0.01,
        "ratio-margin-right": 0.01,
        "ratio-spacing": 0.01,
        "orientation": "vertical",
        "children": ["main_menu_group", "middle_box"]
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.01,
        "children": ["line_menu_group", "easel_space", "color_menu_group"]
    },
    {
        "id": "line_menu_group",
        "type": "PisakScanningGroup",
	"selector": "mouse",
	"strategy": {
                        "type": "PisakRowStrategy",
                        "interval": 1000,
                        "max-cycle-count": 2,
	                "unwind-to": "main_menu_group"
                    },
        "children": [
                        "line_menu_box"
                    ]
    },
    {
        "id": "line_menu_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.02,
        "orientation": "vertical",
        "children": ["line1", "line2", "line3", "line4", "line5",
                     "line_menu_label"]
    },
    {
        "id": "line_menu_label",
        "type": "MxLabel",
        "style-class": "PaintLineMenu",
        "text": "LINIE"
    },
    {
        "id": "line1",
        "type": "PisakPaintButton",
        "target": "easel",
        "ratio-width": 0.075,
        "ratio-height": 0.12,
        "label": "5 pkt",
        "signals": [
                {
                    "name": "clicked",
                    "handler": "scanning/set_pending_group",
                    "object": "main_menu_group"
                },
                {
                    "name": "clicked",
                    "handler": "paint/set_line_width"
                }
        ]
    },
    {
