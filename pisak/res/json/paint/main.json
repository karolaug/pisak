    {
        "id": "easel_space",
        "type": "PisakBinLayout",
        "ratio-width": 0.81,
        "ratio-height": 0.84,
        "children": [
                {
                    "type": "MxStack",
                    "style-class": "PisakPaintEaselFrame",
                    "x-expand": true,
                    "y-expand": true,
                    "children": ["easel"]
                }
            ]
    },
    {
        "id": "navigator",
        "type": "PisakPaintNavigator",
        "max-cycles": -1,
        "step-duration": 50,
        "step": 0.007,
        "line-width": 5,
        "line-color": "rgba(0, 0, 0, 255)"
    },
    {
        "id": "localizer",
        "type": "PisakPaintLocalizer",
        "max-cycles": -1,
        "step-duration": 10,
        "step": 1,
        "line-width": 5,
        "line-color": "rgba(0, 0, 0, 255)"
    },
    {
        "id": "bender",
        "type": "PisakPaintBender",
        "max-cycles": -1,
        "step-duration": 50,
        "step": 10
    },
    {
        "id": "yardstick",
        "type": "PisakPaintYardstick",
        "step-duration": 100,
        "step": 10
    },
    {
        "id": "easel",
        "type": "PisakPaintEasel",
        "background-color": "rgba(255, 255, 255, 255)",
        "x-expand": true,
        "y-expand": true,
        "bender": "bender",
        "navigator": "navigator",
        "localizer": "localizer",
        "yardstick": "yardstick",
        "signals": [
                       {
                           "name": "exit",
                           "handler": "general/start_group",
                           "object": "main_menu_group"
                       }
                   ]
    },
    {
        "id": "main_menu_group",
        "type": "PisakScanningGroup",
	"selector": "mouse",
	"strategy": {
                        "type": "PisakRowStrategy",
                        "interval": 1000,
                        "max-cycle-count": -1,
	                "unwind-to": "main_menu_group"
                    },
        "children": [
                        "main_menu_box"
                    ],
        "signals": [
                       {
                           "name": "notify::mapped",
                           "handler": "general/start_group"
                       }
                   ]
    },
