[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundImage",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "y-align": "end",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.05,
        "ratio-margin-bottom": 0.04,
        "ratio-spacing": 0.015,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box_group", "header"]
    },
    {
        "id": "header",
        "type": "MxLabel",
        "style-class": "PisakViewerAlbumHeader",
        "x-expand": true,
        "margin-right": 100,
        "x-align": "end"
    },
    {
        "id": "middle_box_group",
        "type": "PisakScanningGroup",
	"selector": "mouse",
        "children": ["middle_box"],
        "scanning-hilite": true,
        "strategy": {
            "type": "PisakRowStrategy",
            "scanning-audio-path": "tic.wav",
            "selection-audio-path": "beep.wav",
            "interval": 800,
            "max-cycle-count": -1
        }
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.05,
        "children": ["pager", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakScanningGroup",
	"selector": "mouse",
        "children": ["button_menu_box"],
        "strategy": {
            "id": "menu_group_strategy",
            "type": "PisakRowStrategy",
            "scanning-audio-path": "tic.wav",
            "selection-audio-path": "beep.wav",
            "interval": 800,
            "max-cycle-count": -1
        },
        "signals": [
                       {
                           "name": "notify::mapped",
                           "handler": "general/start_group"
                       }
                    ]
    },
    {
        "id": "button_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.015,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_start", "button_library",  "button_select_page", "button_next_page",
                     "button_automatic"]
    },
    {
        "id": "button_library",
        "type": "PisakViewerButton",
        "label": "BIBLIOTEKA",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "bib"
    },
    {
        "id": "button_start",
        "type": "PisakViewerButton",
        "label": "PANEL STARTOWY",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "exit"
    },
    {
        "id": "button_automatic",
        "type": "PisakViewerButton",
        "icon-size": 50,
        "label": "AUTOMAT",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-name": "auto",
        "signals": [
                       {
                           "name": "clicked",
                           "handler": "pager/toggle_automatic",
                           "object": "pager"
                       },
                       {
                            "name": "clicked",
                            "handler": "scanning/toggle_pause_group",
                            "object": "button_menu"
                        }
                    ]
    },
    {
        "id": "button_select_page",
        "type": "PisakViewerButton",
        "label": "WYBIERZ STRONĘ",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "PLUS",
        "signals": [
                       {
                           "name": "clicked",
                           "handler": "pager/scan_page",
                           "object": "pager"
                       }
                    ]
    },
    {
        "id": "button_next_page",
        "type": "PisakViewerButton",
        "label": "NASTĘPNA STRONA",
        "ratio-width": 0.24,
        "ratio-height": 0.10,
        "icon-size": 50,
        "icon-name": "next",
        "signals": [
                       {
                           "name": "clicked",
                           "handler": "pager/next_page",
                           "object": "pager"
                       }
                    ]
    },
    {
        "id": "pager",
        "type": "PisakPagerWidget",
        "transition-duration": 1000,
        "idle-duration": 3000,
        "page-ratio-spacing": 0.015,
        "ratio-height": 0.75,
        "ratio-width": 0.71,
        "y-align": "start",
        "rows": 3,
        "columns": 3,
        "page-selector": "mouse",
        "page-strategy": {
            "type": "PisakRowStrategy",
            "scanning-audio-path": "tic.wav",
            "selection-audio-path": "beep.wav",
            "interval": 800,
            "max-cycle-count": 2,
            "unwind-to": "button_menu"
        },
        "data-source": "library_data"
    },
    {
        "id": "library_data",
        "type": "PisakViewerAlbumTilesSource",
        "tile-ratio-height": 0.25,
        "tile-ratio-width": 0.22
    },
    {
        "id": "progress_bar",
        "type": "PisakViewerProgressBar",
        "ratio-width": 1,
        "related-object": "pager",
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "label-ratio-x-offset": 0.85
    }
]
