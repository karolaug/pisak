[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.0136,
        "ratio-margin-bottom": 0.0136,
        "ratio-spacing": 0.0211,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box", "header"]
    },
    {
        "id": "header",
        "type": "MxLabel",
        "text": "ALBUM",
        "x-align": "end"
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.0211,
        "children": ["pager", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.0211,
        "children": ["button_2", "button_1"]
    },
    {
        "id": "button_1",
        "type": "PisakViewerButton",
        "label": "przycisk 1",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_2",
        "type": "PisakViewerButton",
        "label": "przycisk 2",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "pager",
        "type": "ClutterActor",
        "width": 800,
        "height": 600,
        "children": ["photo_tile"]
    },
    {
        "id": "photo_tile",
        "type": "PisakViewerPhotoTile",
        "label-text": "kafelek",
        "background-color": "rgb(200, 100, 30)",
        "preview-path": "kolejka.jpg",
        "ratio-width": 0.2,
        "ratio-height": 0.2,
        "preview-ratio-width": 0.16,
        "preview-ratio-height": 0.16,
        "ratio-spacing": 0.008
    },
    {
        "id": "progress_bar",
        "type": "PisakViewerProgressBar",
        "x-expand": true,
        "progress": 0.3,
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "counter-limit": 10,
        "label-ratio-x-offset": 0.8
    }
]
