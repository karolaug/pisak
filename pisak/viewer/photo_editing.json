[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundImage",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "y-align": "end",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.01,
        "ratio-margin-bottom": 0.02,
        "ratio-spacing": 0.02,
        "orientation": "vertical",
        "children": ["middle_box"]
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.05,
        "children": ["slide_space", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakScanningGroup",
	"selector": "mouse",
        "children": ["button_menu_box"],
        "scanning-hilite": true,
        "strategy": {
            "id": "menu_group_strategy",
            "type": "PisakRowStrategy",
            "interval": 800,
            "max-cycle-count": -1,
            "unwind-to": "button_menu"
        },
        "signals": [
            {
                "name": "notify::mapped",
                "handler": "general/start_group"
            }
        ]
    },
    {
        "id": "button_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.01,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_start", "button_photo", "button_11", "button_10",
                     "button_9", "button_8", "button_7","button_6",
                     "button_5", "button_4", "button_3", "button_2", "button_1"]
    },
    {
        "id": "button_1",
        "type": "PisakViewerButton",
        "label": "ZOOM",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/zoom",
                "object": "slide_space"
            },
            {
                "name": "clicked",
                "handler": "scanning/toggle_pause_group",
                "object": "button_menu"
            }
        ]
    },
    {
        "id": "button_2",
        "type": "PisakViewerButton",
        "label": "OBRÓĆ",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/rotate",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_3",
        "type": "PisakViewerButton",
        "label": "KRAWĘDZIE",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/edges",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_4",
        "type": "PisakViewerButton",
        "label": "KONTURY",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/contour",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_5",
        "type": "PisakViewerButton",
        "label": "SEPIA",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/sepia",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_6",
        "type": "PisakViewerButton",
        "label": "NEGATYW",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/invert",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_7",
        "type": "PisakViewerButton",
        "label": "LUSTRO",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/mirror",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_8",
        "type": "PisakViewerButton",
        "label": "SKALA SZAROŚCI",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/grayscale",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_9",
        "type": "PisakViewerButton",
        "label": "PSYCHO",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/noise",
                "object": "slide_space"
            },
            {
                "name": "clicked",
                "handler": "scanning/toggle_pause_group",
                "object": "button_menu"
            }
        ]
    },
    {
        "id": "button_10",
        "type": "PisakViewerButton",
        "label": "PRZEŚWIETLENIE",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/solarize",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_11",
        "type": "PisakViewerButton",
        "label": "ORYGINAŁ",
        "ratio-width": 0.24,
        "ratio-height": 0.065,
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/original",
                "object": "slide_space"
            }
        ]
    },
    {
        "id": "button_photo",
        "type": "PisakViewerButton",
        "label": "POWRÓT",
        "ratio-width": 0.24,
        "ratio-height": 0.065
    },
    {
        "id": "button_start",
        "type": "PisakViewerButton",
        "label": "PANEL STARTOWY",
        "ratio-width": 0.24,
        "ratio-height": 0.065
    },
    {
        "id": "slide_space",
        "type": "PisakBinLayout",
        "ratio-width": 0.71,
        "ratio-height": 0.75,
        "children": ["slide"]
    },
    {
        "id": "slide",
        "type": "PisakViewerPhotoSlide",
        "ratio-width": 0.71,
        "ratio-height": 0.75
    }
]
