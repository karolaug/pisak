[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.02,
        "ratio-margin-bottom": 0.02,
        "ratio-margin-left": 0.02,
        "ratio-margin-right": 0.02,
        "ratio-spacing": 0.02,
        "orientation": "vertical",
        "children": ["upper_box", "middle_box", "bottom_box"]
    },
    {
        "id": "upper_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.02,
        "children": ["upper_right_button", "upper_button", "upper_left_button"]
    },
    {
        "id": "upper_left_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.3,
        "ratio-height": 0.18,
        "label": "ZRÓB ZDJĘCIE"
    },
    {
        "id": "upper_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.3,
        "ratio-height": 0.18,
        "label": "SEPIA",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/sepia",
                "object": "middle_object"
            }
        ]
    },
    {
        "id": "upper_right_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.3,
        "ratio-height": 0.18,
        "label": "ODWRÓĆ KOLORY",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/invert",
                "object": "middle_object"
            }
        ]
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.02,
        "children": ["right_button", "middle_object", "left_button"]
    },
    {
        "id": "left_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.18,
        "ratio-height": 0.45,
        "label": "ORYGINAŁ",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/original",
                "object": "middle_object"
            }
        ]
    },
    {
        "id": "middle_object",
        "type": "PisakViewerPhotoSlide",
        "ratio-width": 0.55,
        "ratio-height": 0.55,
        "image_buffer": {"type": "PisakImageBuffer"},
        "photo_path": "./pisak/res/krolikarnia.jpg"
    },
    {
        "id": "right_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.18,
        "ratio-height": 0.45,
        "label": "OBRÓĆ",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/rotate",
                "object": "middle_object"
            }
        ]
    },
    {
        "id": "bottom_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.02,
        "children": ["bottom_right_button", "bottom_button",
                     "bottom_left_button"]
    },
    {
        "id": "bottom_left_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.3,
        "ratio-height": 0.18,
        "label": "PSYCHO",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/noise",
                "object": "middle_object"
            }
        ]
    },
    {
        "id": "bottom_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.3,
        "ratio-height": 0.18,
        "label": "LUSTRO",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/mirror",
                "object": "middle_object"
            }
        ]
    },
    {
        "id": "bottom_right_button",
        "type": "PisakViewerButton",
        "ratio-width": 0.3,
        "ratio-height": 0.18,
        "label": "KONTURY",
        "signals": [
            {
                "name": "clicked",
                "handler": "viewer/contour",
                "object": "middle_object"
            }
        ]
    }
]
