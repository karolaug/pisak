[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.12,
        "ratio-margin-bottom": 0.04,
        "ratio-spacing": 0.02,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box", "header"]
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.1,
        "children": ["pager_space", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakScanningGroup",
	"selector": "mouse",
        "children": ["button_menu_box"],
        "scanning-hilite": true,
        "strategy": {
            "id": "menu_group_strategy",
            "type": "PisakRowStrategy",
            "interval": 800,
            "max-cycle-count": 2
        }
    },
    {
        "id": "button_menu_box",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.01,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_start"]
    },
    {
        "id": "button_start",
        "type": "PisakViewerButton",
        "label": "PANEL STARTOWY",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "pager_space",
        "type": "PisakBinLayout",
        "ratio-width": 0.68,
        "ratio-height": 0.7,
        "children": ["pager"]
    },
    {
        "id": "pager",
        "type": "PisakPagerWidget",
        "x-expand": true,
        "y-expand": true,
        "data-source": "library_data"
    },
    {
        "id": "library_data",
        "type": "PisakViewerLibraryTilesSource",
        "tile-ratio-height": 0.2,
        "tile-ratio-width": 0.15,
        "tile-ratio-spacing": 0.01,
        "tile-preview-ratio-width": 0.12,
        "tile-preview-ratio-height": 0.12
    },
    {
        "id": "progress_bar",
        "type": "PisakViewerProgressBar",
        "ratio-width": 1,
        "progress": 0.3,
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "counter-limit": 10,
        "label-ratio-x-offset": 0.9
    }
]
