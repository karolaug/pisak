[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.12,
        "ratio-margin-bottom": 0.04,
        "ratio-spacing": 0.02,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box", "header"]
    },
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.1,
        "children": ["pager_space", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.01,
        "y-expand": true,
        "y-align": "end",
        "children": ["button_7","button_6", "button_5", "button_4",
                     "button_3", "button_2", "button_1"]
    },
    {
        "id": "button_1",
        "type": "PisakViewerButton",
        "label": "POKAZ SLAJDÓW",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "button_2",
        "type": "PisakViewerButton",
        "label": "POPRZEDNIE ZDJĘCIE",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "button_3",
        "type": "PisakViewerButton",
        "label": "NASTĘPNE ZDJĘCIE",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "button_4",
        "type": "PisakViewerButton",
        "label": "EDYCJA",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "button_5",
        "type": "PisakViewerButton",
        "label": "ULUBIONE",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "button_6",
        "type": "PisakViewerButton",
        "label": "POWRÓT",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "button_7",
        "type": "PisakViewerButton",
        "label": "PANEL STARTOWY",
        "ratio-width": 0.22,
        "ratio-height": 0.1
    },
    {
        "id": "photo_space",
        "type": "PisakBinLayout",
        "ratio-width": 0.68,
        "ratio-height": 0.7,
        "children": ["slide"]
    },
    {
        "id": "pager_space",
        "type": "PisakBinLayout",
        "ratio-width": 0.68,
        "ratio-height": 0.7,
        "children": ["pager"]
    },
    {
        "id": "pager",
        "type": "PisakPagerWidget",
        "x-expand": true,
        "y-expand": true,
        "rows": 1,
        "columns": 1,
        "data-source": "library_data"
    },
    {
        "id": "library_data",
        "type": "PisakViewerDataSource",
        "data-type": "slideshow"
    },
    {
        "id": "progress_bar",
        "type": "PisakViewerProgressBar",
        "ratio-width": 1,
        "progress": 0.3,
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "counter-limit": 100,
        "label-ratio-x-offset": 0.9
    }
]
