[
    {
        "id": "main",
        "type": "PisakBinLayout",
        "x-expand": true,
        "y-expand": true,
        "children": ["main_box", "background_box"]
    },
    {
        "id": "background_box",
        "type": "PisakBackgroundPattern",
        "x-expand": true,
        "y-expand": true
    },
    {
        "id": "main_box",
        "type": "PisakBoxLayout",
        "x-align": "start",
        "x-expand": true,
        "y-expand": true,
        "ratio-margin-top": 0.0136,
        "ratio-margin-bottom": 0.0136,
        "ratio-spacing": 0.0211,
        "orientation": "vertical",
        "children": ["progress_bar", "middle_box", "header"]
    },
    {
        "id": "header",
        "type": "MxLabel",
        "text": "ALBUM",
        "x-align": "end"
    },    
    {
        "id": "middle_box",
        "type": "PisakBoxLayout",
        "ratio-spacing": 0.0211,
        "children": ["photo_widget", "button_menu"]
    },
    {
        "id": "button_menu",
        "type": "PisakBoxLayout",
        "orientation": "vertical",
        "ratio-spacing": 0.0211,
        "children": ["button_7","button_6", "button_5", "button_4",
                     "button_3", "button_2", "button_1"]
    },
    {
        "id": "button_1",
        "type": "PisakViewerButton",
        "label": "POKAZ SLAJDÓW",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_2",
        "type": "PisakViewerButton",
        "label": "POPRZEDNIE ZDJĘCIE",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_3",
        "type": "PisakViewerButton",
        "label": "NASTĘPNE ZDJĘCIE",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_4",
        "type": "PisakViewerButton",
        "label": "EDYCJA",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_5",
        "type": "PisakViewerButton",
        "label": "ULUBIONE",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_6",
        "type": "PisakViewerButton",
        "label": "POWRÓT",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "button_7",
        "type": "PisakViewerButton",
        "label": "PANEL STARTOWY",
        "ratio-width": 0.2,
        "ratio-height": 0.1
    },
    {
        "id": "photo_widget",
        "type": "PisakBinLayout",
        "ratio-width": 0.7,
        "ratio-height": 0.7,
        "children": ["slide"]
    },
    {
        "id": "slide",
        "type": "PisakViewerPhotoSlide",
        "photo-path": "jagoda.jpg",
        "transition-duration": 500
    },
    {
        "id": "progress_bar",
        "type": "PisakViewerProgressBar",
        "x-expand": true,
        "progress": 0.3,
        "progress-transition-duration": 1000,
        "ratio-height": 0.05,
        "counter-limit": 100,
        "label-ratio-x-offset": 0.8
    }
]
